<%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>
  
  <div class="form-group">
    <label for="message_name" class="control-label col-md-2">名前:</label>
    <div class="col-sm-8">
      <%=f.text_field :name , :class=>"form-control", :placeholder=>"Name input" %>
    </div>
  </div>
  <br>
  <div class="form-group">
    <label for="message_body" class="control-label col-md-2">内容:</label>
    <div class="col-sm-8">
      <%=f.text_area :body , :class=>"span2 form-control" , :placeholder=>"Body Input" %>
    </div>
    <br>
    <br>
    <br>
    <br>

    <div class="col-sm-12 col-sm-offset-4">
      <%=f.submit class: "btn btn-sm btn-primary" %>
    </div>
  </div>
<% end %>
