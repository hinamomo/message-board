<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>

  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%=message.body %>
        <br>
        <% end %>
  </div>
</div>

<%=form_for(@message, html: {class: "form-horizontal"}) do |f| %>
  <div class="form-group">
    <label for="message_name" class="control-label col-md-2">名前:</label>
    <div class="col-sm-8">
      <%=f.text_field :name , :class=>"form-control", :placeholder=>"Name input" %>
    </div>
  </div>
  <br>
  <div class="form-group">
    <label for="message_name" class="control-label col-md-2">内容:</label>
    <div class="col-sm-8">
      <%=f.text_area :body , :class=>"span2 form-control" , :placeholder=>"Body Input" %>
    </div>
    <br>
    <br>
    <br>
    <br>

    <div class="col-sm-12 col-sm-offset-4">
      <%=f.submit class: "btn btn-sm btn-primary" %>
    </div>
  </div>
<% end %>
